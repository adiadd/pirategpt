# Color codes
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo "${BLUE}ğŸ” Running pre-commit checks...${NC}"

# Change directory to ui folder
echo "\n${YELLOW}ğŸ“‚ Changing to ui directory...${NC}"
cd ui || { echo "${RED}âŒ Failed to change to ui directory${NC}"; exit 1; }

# Format check first (fastest)
echo "\n${YELLOW}ğŸ’… Checking code formatting...${NC}"
if ! pnpm format:check; then
    echo "\n${YELLOW}ğŸ”§ Code formatting issues found. Fixing...${NC}"
    pnpm format:write
    echo "${GREEN}âœ¨ Formatting complete${NC}"
    git add .
else
    echo "${GREEN}âœ¨ Code formatting looks good${NC}"
fi

# Run lint-staged (includes eslint)
echo "\n${YELLOW}ğŸ”¬ Running lint checks...${NC}"
if ! pnpm lint-staged; then
    echo "${RED}âŒ Lint checks failed${NC}"
    exit 1
fi

# Run type checking
echo "\n${YELLOW}ğŸ“ Checking TypeScript types...${NC}"
if ! pnpm typecheck; then
    echo "${RED}âŒ Type checking failed${NC}"
    exit 1
fi

# Change back to the root directory
cd ..

echo "\n${GREEN}âœ… All checks passed! Committing changes...${NC}"
